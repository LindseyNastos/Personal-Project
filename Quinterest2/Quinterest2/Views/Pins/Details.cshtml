@model Quinterest2.Views.Pins.DetailsVM

@{
    ViewBag.Title = "Details";
}


<div>

    <div class="row">
        <div class="col-sm-7">

            <img class="expandedPinImage" src="@Html.DisplayFor(model => model.Pin.ImageUrl)" />

        </div>
        <div class="col-sm-5">

            <hr style="border-color:white" />
            <h2>@Model.Pin.Title</h2>

            <hr style="border-color:white" />
            <a href="model.Pin.Website">@Html.DisplayFor(model => model.Pin.Website)</a>
            <br />
            <hr style="border-color:white" />

            <em>@Html.DisplayFor(model => model.Pin.ShortDescription)</em>
            <br />
            <hr style="border-color:white" />
            @Html.DisplayFor(model => model.Pin.LongDescription)
            <hr />
            <strong><text>Pinned by </text>@Html.DisplayFor(model => model.PinnerDisplayName)</strong>

        </div>
    </div>

</div>
<div class="row">
    <div class="col-sm-7">
    </div>
    <div class="col-sm-5">
        @if (Model.CurrentUser.DisplayName == Model.PinnerDisplayName)
        {
            <p>
                @Html.ActionLink("Edit Pin", "Edit", new { id = Model.Pin.Id }) <text> | </text>
                @Html.ActionLink("Delete Pin", "Delete", new { id = Model.Pin.Id }) <text> | </text>
                @Html.ActionLink("Back To All Pins", "Index")
            </p>
        }
        else
        {
            <p>

                <i class="fa fa-thumb-tack"></i>
                @Html.ActionLink("Pin It!", "PinItView", new { id = Model.Pin.Id }) |
                @Html.ActionLink("Back To All Pins", "Index") 

                <div class="flag btn-group collapse">
                    <a class="btn btn-danger btn-sm"><i class="fa fa-flag-o fa-lg"></i></a>
                    <a class="btn btn-danger btn-sm dropdown-toggle" data-toggle="dropdown" href="#">
                        <span class="fa fa-caret-down"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="#"><i class="fa fa-ban fa-fw"></i> Report</a></li>
                    </ul>
                </div>
            </p>
        }

    </div>
</div>