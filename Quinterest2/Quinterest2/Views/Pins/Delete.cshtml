@model Quinterest2.Models.Pin

@{
    ViewBag.Title = "Delete";
}

<h2>Delete This Pin</h2>
<hr />
<h3>Are you sure you want to delete this pin?</h3>

<div class="panel deleteWidth panel-default">
    <div class="panel-body">
        <h4>@Html.DisplayFor(model => model.Title)</h4>
        <img class="smallPinImage img-responsive" src="@Html.DisplayFor(model => model.ImageUrl)" />
        <hr />
        <p>@Html.DisplayFor(model => model.ShortDescription)</p>
    </div>
</div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-sm btn-default" /> 
            <button class="btn btn-sm btn-default">@Html.ActionLink("Back to List", "Index")</button>
        </div>
    }


